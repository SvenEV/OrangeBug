{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "OrangeBugFSharp.Web",
            "configurations": [
                "OrangeBugFSharp.Web (Server)",
                "OrangeBugFSharp.Web (Client)"
            ]
        }
    ],
    "configurations": [
        {
            "name": "OrangeBugFSharp.ConsoleClient",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "F# Build",
            "program": "${workspaceFolder}/OrangeBugFSharp.ConsoleClient/bin/Debug/netcoreapp2.1/OrangeBugFSharp.ConsoleClient.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "OrangeBugFSharp.Web (Server)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "F# Build",
            "program": "${workspaceFolder}/OrangeBugFSharp.Web/bin/Debug/netcoreapp2.1/OrangeBugFSharp.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/OrangeBugFSharp.Web",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}/index.html",
                "windows": {
                    //"command": "cmd.exe",
                    //"args": "/C start ${auto-detect-url}/index.html"
                    "command": "E:/Portables/Chrome64/GoogleChromePortable.exe",
                    "args": "${auto-detect-url}/index.html"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "OrangeBugFSharp.Web (Client)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000/index.html",
            "webRoot": "${workspaceRoot}/OrangeBugFSharp.Web/wwwroot",
            "runtimeExecutable": "E:/Portables/Chrome64/GoogleChromePortable.exe"
        }
    ]
}